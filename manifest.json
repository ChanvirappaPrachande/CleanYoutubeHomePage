{
  "manifest_version": 2,
  "name": "Clean YouTube HomePage for Brave",
  "version": "2.2",
  "description": "Manage bookmarks, favorites, and playlists directly from YouTube links.",
  "permissions": ["activeTab", "contextMenus", "storage", "scripting", "tabs"],
  "host_permissions": ["https://*.youtube.com/*"],

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "cleanyoutube.png"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "css": ["style.css"],
      "js": ["content.js"]
    }
  ],

  "icons": {
    "16": "cleanyoutube.png",
    "48": "cleanyoutube.png",
    "128": "cleanyoutube.png"
  },

  "content_security_policy": "script-src 'self'; object-src 'self'"
}
